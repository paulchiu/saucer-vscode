{
  "name": "saucer",
  "displayName": "Saucer",
  "description": "Copy code reference with Git provider source links as Markdown for sharing",
  "repository": "https://github.com/paulchiu/saucer-vscode",
  "publisher": "paulchiu",
  "version": "1.3.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Saucer",
      "properties": {
        "saucer.includeRelativePath": {
          "type": "boolean",
          "default": true,
          "description": "References should include relative file path"
        },
        "saucer.useGitRoot": {
          "type": "boolean",
          "default": true,
          "description": "Use git root path to support working with subdirectories"
        },
        "saucer.linkSource": {
          "type": "boolean",
          "default": true,
          "description": "References should link source"
        },
        "saucer.cursorReferenceType": {
          "type": "string",
          "enum": [
            "Ask",
            "Symbol",
            "Filename (with line)",
            "Filename (no line)"
          ],
          "default": "Ask",
          "description": "When referencing cursor position, use"
        },
        "saucer.selectionReferenceType": {
          "type": "string",
          "enum": [
            "Ask",
            "Symbol",
            "Filename (with line)",
            "Filename (no line)"
          ],
          "default": "Ask",
          "description": "When referencing a selection, use"
        }
      }
    },
    "commands": [
      {
        "command": "saucer.copy",
        "title": "Copy Reference"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "saucer.copy",
          "group": "clipboard",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "saucer.copy",
        "key": "alt+shift+c",
        "mac": "alt+shift+c"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "ci": "npm-run-all typecheck lint format test:coverage build",
    "dev": "npm-run-all -p dev:*",
    "dev:esbuild": "node esbuild.js --watch",
    "dev:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:knip": "knip",
    "package": "vsce package",
    "prepackage": "npm-run-all ci build:prod",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:vscode": "vscode-test",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "npm run dev"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "knip": "^5.62.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "ts-pattern": "^5.7.1"
  }
}
