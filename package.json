{
  "name": "saucer",
  "displayName": "Saucer",
  "description": "Copy code reference with Git provider source links as Markdown for sharing",
  "repository": "https://github.com/paulchiu/saucer-vscode",
  "publisher": "paulchiu",
  "version": "1.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Saucer",
      "properties": {
        "saucer.includeRelativePath": {
          "type": "boolean",
          "default": true,
          "description": "References should include relative file path"
        },
        "saucer.linkSource": {
          "type": "boolean",
          "default": true,
          "description": "References should link source"
        },
        "saucer.cursorReferenceType": {
          "type": "string",
          "enum": [
            "Ask",
            "Symbol",
            "Filename"
          ],
          "default": "Ask",
          "description": "When referencing cursor position, use"
        },
        "saucer.selectionReferenceType": {
          "type": "string",
          "enum": [
            "Ask",
            "Symbol",
            "Filename"
          ],
          "default": "Ask",
          "description": "When referencing a selection, use"
        }
      }
    },
    "commands": [
      {
        "command": "saucer.copy",
        "title": "Copy Reference"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "saucer.copy",
          "group": "clipboard",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "saucer.copy",
        "key": "alt+shift+c",
        "mac": "alt+shift+c"
      }
    ]
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && node esbuild.js",
    "fmt": "prettier -w .",
    "lint": "eslint src && knip",
    "lint:fix": "eslint src --fix && knip --fix",
    "package": "npm run check-types && node esbuild.js --production",
    "pretest": "npm run compile && npm run lint",
    "test:unit": "vitest run unit.test.ts",
    "test:unit:watch": "vitest watch run unit.test.ts",
    "test:vscode": "vscode-test",
    "vscode:prepublish": "npm run package",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "knip": "^5.50.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "ts-pattern": "^5.7.0"
  }
}
